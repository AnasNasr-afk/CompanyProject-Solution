@using Company.DAL.Models
@model Employee
@{
    ViewData["Title"] = "Details";
}

<h1>Employee Details</h1>
<br />
<br />
<div>
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input readonly asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="col-form-label"></label>
        <input readonly asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfEmployment" class="col-form-label"></label>
        <input readonly asp-for="DateOfEmployment" class="form-control" />
    </div>

    <a asp-controller="Employee" asp-action="Index" class="btn btn-light">Back To List</a>
</div>