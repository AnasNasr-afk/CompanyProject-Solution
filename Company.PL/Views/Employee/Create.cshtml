@using Company.DAL.Models
@model Employee
@{
    ViewData["Title"] = "Create";
}

<h1>Create Employee</h1>
<br />
<br />
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="col-form-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfEmployment" class="col-form-label"></label>
        <input asp-for="DateOfEmployment" class="form-control" type="date" />
    </div>
    <input type="submit" value="Create" class="btn btn-primary" />
    <a asp-controller="Employee" asp-action="Index" class="btn btn-light">Back To List</a>
</form>
